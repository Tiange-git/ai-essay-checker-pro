/**app.wxss**/
page {
  background-color: #1a1a1a;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.btn-primary {
  background: linear-gradient(135deg, #4a90e2, #6c5ce7);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  cursor: pointer;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.4);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-primary:disabled {
  background: #404040;
  color: #888888;
  box-shadow: none;
  cursor: not-allowed;
}

.btn-danger {
  background: #dc3545;
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  cursor: pointer;
}

.card {
  background-color: #2d2d2d;
  border-radius: 24rpx;
  border: 1rpx solid #404040;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.input-area {
  background-color: #1a1a1a;
  border: 2rpx solid #404040;
  border-radius: 16rpx;
  padding: 24rpx;
  min-height: 300rpx;
  font-size: 28rpx;
  color: #ffffff;
  box-sizing: border-box;
}

.input-area:focus {
  border-color: #4a90e2;
}

.tab-bar {
  display: flex;
  background-color: #2d2d2d;
  border-radius: 24rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 16rpx;
  color: #888888;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4a90e2, #6c5ce7);
  color: #ffffff;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #404040;
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  color: #888888;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #2d2d2d;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #404040;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.modal-close {
  font-size: 40rpx;
  color: #888888;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #404040;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
