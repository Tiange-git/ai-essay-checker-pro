/* pages/index/index.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a1a 0%, #2d2d2d 100%);
}

.header {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #4a90e2, #6c5ce7);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888888;
}

.input-section {
  padding: 40rpx;
}

.tab-bar {
  display: flex;
  background: #1a1a1a;
  border-radius: 24rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  color: #888888;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4a90e2, #6c5ce7);
  color: #ffffff;
}

.tab-content {
  margin-bottom: 40rpx;
}

.input-area {
  background: #1a1a1a;
  border: 2rpx solid #404040;
  border-radius: 16rpx;
  padding: 24rpx;
  min-height: 400rpx;
  font-size: 28rpx;
  color: #ffffff;
  width: 100%;
  box-sizing: border-box;
}

.placeholder {
  color: #666666;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #888888;
  margin-top: 16rpx;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #1a1a1a;
  border: 2rpx dashed #404040;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  min-height: 300rpx;
  box-sizing: border-box;
}

.upload-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #888888;
}

.check-btn {
  width: 100%;
  margin-top: 20rpx;
}

.history-entry {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #2d2d2d;
  border-radius: 16rpx;
  margin-top: 30rpx;
}

.history-entry text {
  color: #ffffff;
  font-size: 28rpx;
}

.arrow {
  color: #888888;
}
